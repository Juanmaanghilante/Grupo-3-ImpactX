<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {title:"Impact X | Productos"})%>

  <body>
    <%- include('../partials/header')%>
      <div class="bgProductos">
        <main class="mainProducts">
          <% productos.forEach(producto=> { %>
            <article class="tarjetaProductos">
              <div class="containerImagenProductos">
                <img class="productoImagen" src="<%= producto.imagen %>" alt="imagen producto <%= producto.nombre %>">
              </div>
              <div class="containerInfoProductos">
                <h2>
                  <%= producto.nombre %>
                </h2>
                <p>
                  <%= producto.precio %>
                </p>
                <p>
                  <%= producto.descripcion %>
                </p>
                <div>
                  <a class="botonProductos" href="">ADD TO CART</a>
                  <a class="botonProductos" href="">COMPRAR AHORA</a>
                  <form action="/productos/delete/<%= producto.id %>?_method=DELETE" method="POST">
                      <button type="sumbit" class="botonProductos">ELIMINAR</button>
                  </form>
                </div>
              </div>
            </article>
            <% }) %>
        </main>
      </div>
      <%- include('../partials/footer')%>
  </body>

</html>