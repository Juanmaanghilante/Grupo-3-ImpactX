<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {title:"Login"})%>

  <body class="bodySignUp">

    <%- include('../partials/header')%>

      <form action="/user/login" method="POST" class="create-form">
        <div class="content">
          <div>

            <img src="/img/logo-impactx.png" alt="" class="image-sign-up" />
          </div>
          <div>
            <h2 class="titulo-registrar-usuario">¡Ingresá a tu usuario!</h2>
            <div class="control-formulario">
              <div class="erroresForm">
                <% if (locals.errors && errors.user) { %>
                  <%= errors.user.msg %>
                    <% } %>
              </div>
              <input type="text" name="user" class="control" placeholder="Usuario" required />

            </div>
            <div class="control-formulario">
              <input type="password" name="password" class="control" placeholder="Contraseña" required />
            </div>
            <a href="/user/signup">¿No tenes usuario? ¡Registrate!</a><br>
            <button type="submit" class="botonContactanos">Ingresar</button>
            <input type="checkbox" name="rememberUser" class="botonContactanos"> Mantener sesión iniciada</input>
          </div>
        </div>
      </form>

      <%- include('../partials/footer')%>

      
      <script>
        const menu = document.querySelector('.svgMenu')
        const close = document.querySelector('.closeBtn')
        const nav = document.querySelector('#navPrincipal')

        menu.addEventListener('click', () => {
          nav.classList.add('open-nav')
        })
        close.addEventListener('click', () => {
          nav.classList.remove('open-nav')
        })
      </script>
  </body>

</html>