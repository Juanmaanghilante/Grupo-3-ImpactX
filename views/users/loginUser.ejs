<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {title:"Impact X | Login"})%>

  <body class="bodySignUp">

    <%- include('../partials/header')%>

      <form action="/user/login" method="POST" class="create-form">
        <div class="content">
          <div>

            <img src="/img/logo-impactx.png" alt="" class="image-sign-up" />
          </div>
          <div>
            <h2 class="titulo-registrar-usuario">Login</h2>
            <div class="control-formulario">
              <div class="erroresForm">
                <% if (locals.errors && errors.user) { %>
                  <%= errors.user.msg %>
                <% } %>
              </div>
              <input type="text" name="user" class="control" placeholder="User name" />

            </div>
            <div class="control-formulario">
              <div class="erroresForm">
                <% if (locals.errors && errors.password) { %>
                  <%= errors.password.msg %>
                <% } %>
              </div>            
              <input type="password" name="password" class="control" placeholder="Password" />
            </div>
            <input type="checkbox" class="botonSesionIniciada" name="rememberUser"> Keep signed in</input><br>
            <button type="submit" class="botonLogin">Log In</button>
            <a class="registrateBoton" href="/user/signup">Don't have a user? Sign up!</a>
          </div>
        </div>
      </form>

      <%- include('../partials/footer')%>
      <script src="/js/hamburgMenu.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>       
  </body>

</html>