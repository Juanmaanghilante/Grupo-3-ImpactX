<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {title:"Impact X | Users"})%>

  <body class="bgProductos">
    <%- include('../partials/header')%>
    <main class="mainUser">
      <% if (locals.isLogged) { %> <% if
        (locals.userLogged.perfiles.name=="Admin" ) { %>
          <a class="nuevoUsuario" href="/user/signup">+</a>
        <% } %> <% } %>
      <% usuarios.forEach(usuario=> { %> <% if (locals.userLogged.id!=usuario.id
      ) { %>
      <article class="tarjetaProductos">
        <img
            class="productoImagen"
            src="/img/<%= usuario.image %>"
            alt="imagen usuario <%= usuario.user %>"
          />
        <div class="containerInfoProductos">
          <h2><%= usuario.name + ' ' + usuario.lastname %></h2>
          <p><%= usuario.user_name %></p>
          <p><%= usuario.perfiles.name %></p>
          <% if (locals.isLogged) { %> <% if
          (locals.userLogged.perfiles.name=="Admin" ) { %>
          <div class="contenedorBotonesProductos">
            <a class="botonProductos" href="/user/edit/<%=usuario.id %>"
                >Edit 
              </a>
            <div>

              <form
                action="/user/delete/<%= usuario.id %>?_method=DELETE"
                method="POST"
              >
                <button type="sumbit" class="botonProductos deleteProcess" id="deleteButton">Delete</button>
              </form>
            </div>
          </div>
          <% } %> <% } %>
        </div>
      </article>
      <% } %> <% }) %> 
    </main>

      <%- include('../partials/footer')%>
        <script src="/js/hamburgMenu.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="/js/users/userList.js"></script>
  </body>

</html>