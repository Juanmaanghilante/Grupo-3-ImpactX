<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {title:"Impact X | Profile"})%>

  <body class="bgProductos">

    <%- include('../partials/header')%>

      <main class="mainProfile">
        <div class="wrapperProfile">
          <section class="wrapperProfileTop">
            <div>
              <img src="../img/<%= user.image %>" alt="">
              <div>
                <h2><%= user.name %> <%= user.lastname %></h2>
                <p class="usuario-tipo">My user name: <%= user.user_name %> </p>
                <p class="usuario-tipo">Role: <%= user.perfiles.name %> </p>
              </div>
            </div>
              <a class="logoutButton" href="/user/logout">Log Out</a>
            </div>
          </section>
        </div>

        <section class="wrapperProfileBottom">

          <% if (locals.userLogged && user.perfiles.name == 'Admin') { %>
            <a href="/user/list">
              <section>
                <div>
                  <p>/</p>
                  <div>
                    <h4>Edit Users</h4>
                    <h5>Modify and control users settings</h5>
                  </div>
                </div>
                <p>></p>
              </section>
            </a>
          <% } %>

          <% if (locals.userLogged && user.perfiles.name == 'Admin') { %>
            <a href="/request/edit">
              <section>
                <div>
                  <p>/</p>
                  <div>
                    <h4>Answer requests</h4>
                    <h5>Answer user questions by email</h5>
                  </div>
                </div>
                <p>></p>
              </section>
            </a>
          <% } %>                  

          <a href="/user/edit/<%=user.id %>">
            <section>
              <div>
                <p>/</p>
                <div>
                  <h4>Edit Profile</h4>
                  <h5>Modify your profile settings</h5>
                </div>
              </div>
              <p>></p>
            </section>
          </a>        


          <a href="/user/edit/<%=user.id %>/changepassword">
            <section>
              <div>
                <p>/</p>
                <div>
                  <h4>Change Password</h4>
                  <h5>Modify your password</h5>
                </div>
              </div>
              <p>></p>
            </section>
          </a>

          <form action="/user/delete/<%=user.id %>?_method=DELETE" method="POST">
            <button class="wrapperProfileBottom-button" type="submit">
              <section class="button-section">
                <div class="button-content">
                  <p>/</p>
                  <div>
                    <h4>Delete user</h4>
                    <h5>Delete your user</h5>
                  </div>
                </div>
                <p class="right-arrow">></p>
              </section>
            </button>
          </form>
          
        </section>
      </main>

      <%- include('../partials/footer')%>
      <script src="/js/hamburgMenu.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> 
  </body>

</html>